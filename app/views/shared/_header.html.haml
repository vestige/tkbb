.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to '#tkbb', root_path, :class => 'brand'
      %ul.nav
        %li= link_to 'みんなの記録', climbings_path
        %li= link_to '記録をつける', new_climbing_path
        %li= link_to 'クライミングジム', gyms_path
      %ul.nav.nav-pills.pull-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{:data => { :toggle => 'dropdown', :target => '#'}, :href => signout_path}
              #{current_user.name.try(:html_safe)} さんようこそ
              %b{:class => 'caret'}
            %ul.dropdown-menu
              %li= link_to 'サインアウト', signout_path
        - else
          %li= link_to 'Twitterでサインイン', signin_path(:provider => 'twitter')
          - if Rails.env.development?
            %li= link_to '開発者としてサインイン', signin_path(:provider => 'developer')
