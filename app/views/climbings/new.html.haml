- @title = 'クライミングの記録をつける'

.page-header
  %h1= @title

= form_for @climbing, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    .control-group
      = f.label :action, '活動内容', :class => 'control-label'
      .controls
        = f.select :action, [["部活", "circle"], ["闇練", "training"], ["予定", "plan"]]
    .control-group
      = f.label :gym_id, 'ジム', :class => 'control-label'
      .controls
        = f.collection_select :gym_id, Gym.all, :id, :name
    .control-group
      = f.label :comment, 'コメント', :class => 'control-label'
      .controls
        = f.text_area :comment, :class => 'input-xlarge', :rows => 3
    .form-actions
      = f.submit '記録する', :class => 'btn btn-primary '
